    <div class="mybox">
        <h1>Blog Posts</h1>
        <div class="mylist">
            <%   if (Object.keys(posts).length > 0) { %>
            <ul>
                <%   for (const [key, value] of Object.entries(posts)) {%>
                    <li type="1"><a href="/blog?number=<%=key%>" id="mytestid" name="firstpost"><%= posts[key][0] %></a></li>
                    
                <%  }%> 
            </ul>
            <%  } else { %>
                <p>No posts available.</p>
                <p>Be the first to <a href="/write">write a blog post</a>!</p>
            <% } %>
        </div>
        
    </div>
    
